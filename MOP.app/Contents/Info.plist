<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>CFBundleExecutable</key>
    <string>mop</string>
    <key>CFBundleIdentifier</key>
    <string>com.dmitriid.mop</string>
    <key>CFBundleName</key>
    <string>MOP</string>
    <key>CFBundleDisplayName</key>
    <string>MOP - UPnP Media Browser</string>
    <key>CFBundleVersion</key>
    <string>1.0.0</string>
    <key>CFBundleShortVersionString</key>
    <string>1.0.0</string>
    <key>CFBundlePackageType</key>
    <string>APPL</string>
    <key>CFBundleSignature</key>
    <string>????</string>
    <key>LSMinimumSystemVersion</key>
    <string>10.15</string>
    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>
    <key>NSHighResolutionCapable</key>
    <true/>
    
    <!-- Network permissions for UPnP discovery -->
    <key>NSLocalNetworkUsageDescription</key>
    <string>MOP needs local network access to discover UPnP devices like Plex servers, Sonos speakers, and other media devices on your network.</string>
    
    <!-- Multicast entitlement -->
    <key>com.apple.security.network.client</key>
    <true/>
    <key>com.apple.security.network.server</key>
    <true/>
    
    <!-- Category for App Store if needed -->
    <key>LSApplicationCategoryType</key>
    <string>public.app-category.utilities</string>
    
    <!-- Terminal app that requests network permission -->
    <key>LSUIElement</key>
    <false/>
    
    <!-- Supported file types if needed -->
    <key>CFBundleDocumentTypes</key>
    <array>
        <dict>
            <key>CFBundleTypeName</key>
            <string>Media Files</string>
            <key>CFBundleTypeRole</key>
            <string>Viewer</string>
            <key>LSItemContentTypes</key>
            <array>
                <string>public.movie</string>
                <string>public.audio</string>
            </array>
        </dict>
    </array>
</dict>
</plist>